{
    "openapi": "3.0.0",
    "info": {
      "title": "Prediksi Penjualan",
      "description": "API untuk meminta prediksi penjualan dengan menggunakan IBM WatsonX",
      "version": "1.0.0",
      "x-ibm-application-id": "sales-forecast-app",
      "x-ibm-application-name": "Prediksi Penjualan"
    },
    "servers": [
      {
        "url": "https://forecast-auto-ai.1soswfjkmeox.us-south.codeengine.appdomain.cloud/",
        "description": "API Bahasa Indonesia"
      }
    ],
    "security": [
        {
            "basicAuth": []
        }
    ],
    "paths": {
      "/predict": {
        "post": {
          "summary": "Prediksi Penjualan",
          "description": "Mendapatkan data prakiraan atau prediksi penjualan bulan depan untuk produk tertentu. Menerima input berupa angka (integer) yang menggambarkan jumlah bulan ke depan yang ingin diprediksi.",
          "operationId": "sales-forecast-app",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "forecast_window": {
                      "type": "number",
                      "format": "integer",
                      "description": "Jumlah bulan yang akan diminta prediksi penjualannya. Nilainya dalam bentuk angka, dimana nilai maksimumnya adalah 3.",
                      "default": 1,
                      "maximum": 3
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Prediksi berhasil diperoleh dari model AutoAI",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "predictions": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "sales": {
                              "type": "number",
                              "format": "float"
                            },
                            "quantity": {
                              "type": "integer"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized - Invalid API key or authentication token"
            },
            "500": {
              "description": "Internal Server Error"
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "basicAuth": {
            "type": "http",
            "scheme": "basic"
        }
      }
    }
  }
  